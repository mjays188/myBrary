
<%- include('./partials/header')%>
<div class="container d-flex flex-column" style="margin-top: 10%;">
    <h1 class="text-center text-primary">Sign In</h1>
    <form action="/signin" method="POST">
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> Email </span>
                </div>
                <input class="form-control" type="email" name="username" placeholder="Enter registered email" required>
            </div>
        </div>
        <div class="form-group ">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> Password </span>
                </div>
                <input class="form-control" type="password" name="password" placeholder="Password" required>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-success mr-5" type="submit">Sign In</button>
            <a href="/forgot-password" class="btn btn-warning">forgot-password?</a>
        </div>
        
        
    </form>
</div>

<%- include('./partials/footer')%>