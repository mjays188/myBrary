
<%- include('./partials/header')%>
<div class="container d-flex flex-column" style="margin-top: 10%;">
    <h1 class="text-center text-primary">Reset Password</h1>
    <form action="/forgot-password" method="POST">
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> Email </span>
                </div>
                <input class="form-control" type="email" name="username" placeholder="Enter registered email" required>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-success mr-5" type="submit">Send Reset Instructions</button>
        </div>
    </form>
</div>

<%- include('./partials/footer')%>