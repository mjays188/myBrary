<%- include('./partials/header')%>
<div class="container d-flex flex-column" style="margin-top: 10%;">
        <h1 class="text-center text-secondary">Sign Up(Admin)</h1>
        <form action="/signup" method="POST">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Name </span>
                    </div>
                    <input class="form-control" type="text" name="name" placeholder="Full Name" required>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Email </span>
                    </div>
                    <input class="form-control" type="email" name="username" placeholder="Email Id" required>
                </div>
            </div>
            <div class="form-group ">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Password </span>
                    </div>
                    <input class="form-control password1" type="password" name="password" placeholder="Password" required>
                </div>
            </div>
            <div class="form-group ">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Confirm Password </span>
                    </div>
                    <input class="form-control password2" type="password" name="confirm_password" placeholder="Re-enter Password" required>
                </div>
            </div>
            <div class="form-group ">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Admin Register Password </span>
                    </div>
                    <input class="form-control" type="password" name="secret_password" placeholder="Secret password" required>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success signup" type="submit">Sign Up</button>
            </div>
            
        </form>
</div>

<%- include('./partials/footer')%>